<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/title_team"
                android:text="Team Working WDB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="22sp"
                android:textStyle="bold"
                android:background="@color/blueWaves"
                android:textColor="#fff"
                android:padding="10dp"
                android:layout_gravity="center"
                android:textAlignment="center"/>

            <ImageView
                android:id="@+id/img_teamWorking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/team_working" />

            <TextView
                android:id="@+id/flo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Florian Mazuy"
                android:textAlignment="center"
                android:textStyle="italic|bold"
                android:textSize="22sp"
                android:paddingTop="10dp"
                android:textColor="@color/blueWaves"
                />
            <TextView
                android:id="@+id/lolo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Laureen Martina"
                android:textAlignment="center"
                android:textStyle="italic|bold"
                android:textSize="22sp"
                android:paddingTop="10dp"
                android:textColor="@color/orange"
                />

            <TextView
                android:id="@+id/lulu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lucile Schiada"
                android:textAlignment="center"
                android:textStyle="italic|bold"
                android:textSize="22sp"
                android:paddingTop="10dp"
                android:textColor="@color/colorAccent"
                />

            <Button
                android:id="@+id/btn_ok"
                style="@style/AppTheme.RoundedCornerMaterialButton2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:text="CIAO ãƒ„"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>