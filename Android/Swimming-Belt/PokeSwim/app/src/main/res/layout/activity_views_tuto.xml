<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/v1"
        android:layout_width="350dp"
        android:layout_height="580dp"
        android:background="@color/blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/mode_emploi"
            android:text="MODE EMPLOI WDB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Etape 1"
            android:layout_gravity="top|center"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:textSize="18sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sélectionnez un Programme"
            android:layout_gravity="top|center"
            android:layout_marginTop="80dp"
            android:textSize="16dp"
            android:textStyle="italic"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="120dp"
            android:textAlignment="center"
            android:text="Le programme sélectionné correspond à un\nobjectif prédéfini,avec des données pré-enregistrés.\n\nAfin d'évaluer au mieux votre progression, nous\nnous servirons des données pré-enregistrées\npour les comparer à vos résultats."
            />

        <ImageView
            android:layout_width="190dp"
            android:layout_height="280dp"
            android:src="@drawable/tuto_1"
            android:layout_marginTop="85dp"
            android:layout_gravity="center"/>

        <!--<ImageButton
            android:id="@+id/btn_slideTuto1to2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center"
            android:src="@drawable/ic_arrow_back_black_24dp"
            />-->
    </FrameLayout>

    <FrameLayout
        android:id="@+id/v2"
        android:layout_width="350dp"
        android:layout_height="580dp"
        android:background="#455a64"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:text="MODE EMPLOI WDB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Etape 2"
            android:layout_gravity="top|center"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mettez en route la Ceinture Connectée"
            android:layout_gravity="top|center"
            android:layout_marginTop="80dp"
            android:textColor="#fff"
            android:textSize="16dp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="120dp"
            android:textAlignment="center"
            android:text="Chaque ceinture comporte un numéro\nd'identification unique, propre à son utilisateur."
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="170dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="16sp"
            android:text="Mise en route:"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="200dp"
            android:textAlignment="center"
            android:text="Flashé le capteur via une source de lumière"
            />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/tuto2"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="340dp"
            android:textColor="#fff"
            android:text="Led Rouge : en attente du Wifi\nLed Verte   : Wifi activé"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="380dp"
            android:textAlignment="center"
            android:text="Flashé à nouveau le capteur en fin de séance\npour envoyer vos performances du jour !"
            />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/tuto2_bis"
            android:layout_marginBottom="50dp"
            android:layout_gravity="bottom|center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="450dp"
            android:textColor="#fff"
            android:text="Led Bleu : envoie des performances"
            />

        <!--<ImageButton
            android:id="@+id/btn_slideTuto2to1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|left"
            android:src="@drawable/ic_arrow_back_black_24dp"
            />

        <ImageButton
            android:id="@+id/btn_slideTuto2to3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|right"
            android:src="@drawable/ic_arrow_back_black_24dp"
            />-->
    </FrameLayout>

    <FrameLayout
        android:id="@+id/v3"
        android:layout_width="350dp"
        android:layout_height="580dp"
        android:background="#c5e1a5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:text="MODE EMPLOI WDB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Etape 3"
            android:layout_gravity="top|center"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="top|center"
            android:layout_marginTop="85dp"
            android:text="Retrouver vos Performances sur l'application !\n\n Allez dans l'onglet Profil ou Performance\npour visualiser tous vos exploits !"/>

        <ImageView
            android:layout_width="190dp"
            android:layout_height="280dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/tuto_3"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="190dp"
            android:textAlignment="center"
            android:text="Améliorez-vous chaque jour et\nobtenez un corps de rêve !"/>

        <!--<ImageButton
            android:id="@+id/btn_slideTut3to2"
            android:layout_width="50dp"
